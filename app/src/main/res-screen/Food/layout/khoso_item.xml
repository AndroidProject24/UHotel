<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="@dimen/cardview_left"
    android:layout_marginRight="@dimen/cardview_left"
    android:layout_marginTop="@dimen/cardview_top"
    android:elevation="100dp"
    card_view:cardCornerRadius="8dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">
    <!--
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/md_black_1000"
        android:text="Sim số đẹp:"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_black_1000"
            android:text="090909090"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_vnd"
            android:layout_toRightOf="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/md_black_1000"
            android:text="5000"/>
        <TextView
            android:layout_toRightOf="@+id/txt_vnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textColor="@color/md_black_1000"
            android:text="VNĐ"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
