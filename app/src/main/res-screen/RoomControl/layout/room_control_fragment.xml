<?xml version="1.0" encoding="utf-8"?>

<!--MAIN PAGE LAYOUT-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bg_room_control"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
    >

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:lineSpacingExtra="10dp"
      android:paddingBottom="30dp"
      android:paddingTop="30dp"
      android:text="PRESETS"
      android:textColor="@color/room_presets_text"
      android:textSize="30sp"
      />
  <!--PRESET MENU ITEM-->
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:orientation="horizontal"
      >

    <Button
        android:id="@+id/room_control_preset_home"
        android:text="Home"
        style="@style/RoomControl.Button"
        />

    <Button
        android:id="@+id/room_control_preset_away"
        android:text="Away"
        style="@style/RoomControl.Button"
        />

    <Button
        android:id="@+id/room_control_preset_read"
        android:text="Read"
        style="@style/RoomControl.Button"
        />

    <Button
        android:id="@+id/room_control_preset_sleep"
        android:text="Sleep"
        style="@style/RoomControl.Button"
        />
  </LinearLayout>

  <!--MAIN PAGE CONTENT-->
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingTop="20dp"
      >

    <!--TEMP LAYOUT-->
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

      <TextView
          android:id="@+id/room_control_temp_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal|top"
          android:text="TEMP"
          android:textSize="30sp"
          style="@style/RoomControl_txt_maincontent_lights"
          />

      <ImageView
          android:id="@+id/room_control_temp_btnUp"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_below="@+id/room_control_temp_name"
          android:layout_marginLeft="100dp"
          android:background="@drawable/roomcontrol_tab_selector"
          android:src="@drawable/btnup"
          />

      <ImageView
          android:id="@+id/room_control_temp_btnDown"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_below="@+id/room_control_temp_seek"
          android:layout_marginLeft="100dp"
          android:background="@drawable/roomcontrol_tab_selector"
          android:focusable="true"
          android:nextFocusDown="@+id/room_control_lights_mainseek"
          android:nextFocusRight="@+id/room_control_lights_mainseek"
          android:nextFocusUp="@+id/room_control_temp_btnUp"
          android:scaleType="fitXY"
          android:src="@drawable/btndown"
          />

      <LinearLayout
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/room_control_temp_btnUp"
          android:layout_marginLeft="60dp"
          android:gravity="center"
          android:orientation="vertical"
          android:padding="30dp"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="SET TO"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/room_control_temp_temptxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:padding="10dp"
            android:scaleType="center"
            android:text="27oC"
            android:textColor="@color/white"
            android:textSize="40sp"
            />

        <TextView
            android:id="@+id/room_control_temp_temptxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="68oC"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
      </LinearLayout>

      <com.acuteksolutions.uhotel.libs.swagpoints.SwagPoints
          android:id="@+id/room_control_temp_seek"
          android:layout_width="200dp"
          android:layout_height="200dp"
          android:layout_gravity="center"
          android:layout_marginLeft="30dp"
          android:layout_marginStart="30dp"
          app:arcColor="@color/color_bg_progress"
          app:arcWidth="10dp"
          app:max="100"
          app:min="0"
          app:progressColor="@color/color_progress"
          app:progressWidth="8dp"
          app:step="1"
          app:textColor="@color/white"
          app:textSize="72sp"
          />
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <TableRow>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="LIGHTS"
            android:textSize="30sp"
            style="@style/RoomControl_txt_maincontent_lights"
            />
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="DRAPES"
            android:textSize="30sp"
            style="@style/RoomControl_txt_maincontent_lights"
            />
      </TableRow>
      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAIN"
            style="@style/RoomControl_txt_maincontent_lights_itemtxt"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHEERS"
            style="@style/RoomControl_txt_maincontent_lights_itemtxt"
            />

      </TableRow>
      <TableRow>
        <com.acuteksolutions.uhotel.libs.bubbleseekbar.BubbleSeekBar
            android:id="@+id/seekBar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:bsb_bubble_color="@color/yellow"
            app:bsb_bubble_text_color="@color/colorPrimaryDark"
            app:bsb_second_track_color="@color/tab_select"
            app:bsb_thumb_radius="9dp"
            app:bsb_track_color="@color/room_bg_track"
            />
        <com.acuteksolutions.uhotel.libs.bubbleseekbar.BubbleSeekBar
            android:id="@+id/seekBar_sheers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:bsb_bubble_color="@color/yellow"
            app:bsb_bubble_text_color="@color/colorPrimaryDark"
            app:bsb_second_track_color="@color/tab_select"
            app:bsb_thumb_radius="9dp"
            app:bsb_track_color="@color/room_bg_track"
            />
      </TableRow>
      <TableRow>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
          <TextView
              android:id="@+id/main_status_off"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="off"
              style="@style/RoomControl_txt_maincontent_lights_itemstatus"
              />

          <TextView
              android:id="@+id/main_status_on"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:gravity="end"
              android:text="on"
              style="@style/RoomControl_txt_maincontent_lights_itemstatus"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

          <TextView
              android:id="@+id/sheers_status_off"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="close"
              style="@style/RoomControl_txt_maincontent_lights_itemstatus"
              />

          <TextView
              android:id="@+id/sheers_status_on"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:gravity="end"
              android:text="open"
              style="@style/RoomControl_txt_maincontent_lights_itemstatus"
              />
        </LinearLayout>
      </TableRow>

      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OVERHEAD"
            style="@style/RoomControl_txt_maincontent_lights_itemtxt"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLACKOUTS"
            style="@style/RoomControl_txt_maincontent_lights_itemtxt"
            />
      </TableRow>
      <TableRow>
        <com.acuteksolutions.uhotel.libs.bubbleseekbar.BubbleSeekBar
            android:id="@+id/seekBar_overhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:bsb_bubble_color="@color/yellow"
            app:bsb_bubble_text_color="@color/colorPrimaryDark"
            app:bsb_second_track_color="@color/tab_select"
            app:bsb_thumb_radius="9dp"
            app:bsb_track_color="@color/room_bg_track"
            />
        <com.acuteksolutions.uhotel.libs.bubbleseekbar.BubbleSeekBar
            android:id="@+id/seekBar_blackouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:bsb_bubble_color="@color/yellow"
            app:bsb_bubble_text_color="@color/colorPrimaryDark"
            app:bsb_second_track_color="@color/tab_select"
            app:bsb_thumb_radius="9dp"
            app:bsb_track_color="@color/room_bg_track"
            />
      </TableRow>
      <TableRow>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
          <TextView
              android:id="@+id/overhead_status_off"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="off"
              style="@style/RoomControl_txt_maincontent_lights_itemstatus"
              />

          <TextView
              android:id="@+id/overhead_status_on"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:gravity="end"
              android:text="on"
              style="@style/RoomControl_txt_maincontent_lights_itemstatus"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

          <TextView
              android:id="@+id/blackouts_status_off"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="close"
              style="@style/RoomControl_txt_maincontent_lights_itemstatus"
              />

          <TextView
              android:id="@+id/blackouts_status_on"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:gravity="end"
              android:text="open"
              style="@style/RoomControl_txt_maincontent_lights_itemstatus"
              />
        </LinearLayout>
      </TableRow>

      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WALL"
            style="@style/RoomControl_txt_maincontent_lights_itemtxt"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SLIDER"
            style="@style/RoomControl_txt_maincontent_lights_itemtxt"
            />

      </TableRow>
      <TableRow>
        <com.acuteksolutions.uhotel.libs.bubbleseekbar.BubbleSeekBar
            android:id="@+id/seekBar_wall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:bsb_bubble_color="@color/yellow"
            app:bsb_bubble_text_color="@color/colorPrimaryDark"
            app:bsb_second_track_color="@color/tab_select"
            app:bsb_thumb_radius="9dp"
            app:bsb_track_color="@color/room_bg_track"
            />
        <com.acuteksolutions.uhotel.libs.bubbleseekbar.BubbleSeekBar
            android:id="@+id/seekBar_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:bsb_bubble_color="@color/yellow"
            app:bsb_bubble_text_color="@color/colorPrimaryDark"
            app:bsb_second_track_color="@color/tab_select"
            app:bsb_thumb_radius="9dp"
            app:bsb_track_color="@color/room_bg_track"
            />
      </TableRow>
      <TableRow>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
          <TextView
              android:id="@+id/wall_status_off"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="off"
              style="@style/RoomControl_txt_maincontent_lights_itemstatus"
              />

          <TextView
              android:id="@+id/wall_status_on"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:gravity="end"
              android:text="on"
              style="@style/RoomControl_txt_maincontent_lights_itemstatus"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

          <TextView
              android:id="@+id/slider_status_off"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="close"
              style="@style/RoomControl_txt_maincontent_lights_itemstatus"
              />

          <TextView
              android:id="@+id/slider_status_on"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:gravity="end"
              android:text="open"
              style="@style/RoomControl_txt_maincontent_lights_itemstatus"
              />
        </LinearLayout>
      </TableRow>
    </TableLayout>
  </LinearLayout>
</LinearLayout>
