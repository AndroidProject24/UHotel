            android:textSize="30sp"
            style="@style/RoomControl_txt_maincontent_lights"
            />

        <TextView
            android:id="@+id/room_control_drapes_sheerstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHEERS"
            style="@style/RoomControl_txt_title"
            />
        &lt;!&ndash;sheers&ndash;&gt;
        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/room_control_drapes_sheersseek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:max="10"
            android:nextFocusDown="@+id/room_control_drapes_blackoutsseek"
            android:nextFocusLeft="@+id/room_control_drapes_sheersseek"
            android:nextFocusRight="@+id/room_control_drapes_sheersseek"
            android:nextFocusUp="@+id/room_control_lights_wallseek"
            android:progressDrawable="@drawable/room_control_progess_selector"
            android:thumb="@drawable/room_control_thumb_selector"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

          <TextView
              android:id="@+id/room_control_drapes_sheersstatus"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="close"
              style="@style/RoomControl_txt_content"
              />

          <TextView
              android:id="@+id/room_control_drapes_sheersstatus_on"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:gravity="end"
              android:text="open"
              style="@style/RoomControl_txt_content"
              />
        </LinearLayout>

        <TextView
            android:id="@+id/room_control_drapes_blackoutstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLACKOUTS"
            style="@style/RoomControl_txt_title"
            />
        &lt;!&ndash;blackout&ndash;&gt;
        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/room_control_drapes_blackoutsseek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:max="10"
            android:nextFocusDown="@+id/room_control_drapes_sliderseek"
            android:nextFocusLeft="@+id/room_control_drapes_blackoutsseek"
            android:nextFocusRight="@+id/room_control_drapes_blackoutsseek"
            android:nextFocusUp="@+id/room_control_drapes_sheersseek"
            android:progressDrawable="@drawable/room_control_progess_selector"
            android:thumb="@drawable/room_control_thumb_selector"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

          <TextView
              android:id="@+id/room_control_drapes_blackoutsstatus"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="close"
              style="@style/RoomControl_txt_content"
              />

          <TextView
              android:id="@+id/room_control_drapes_blackoutsstatus_on"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:gravity="end"
              android:text="open"
              style="@style/RoomControl_txt_content"
              />
        </LinearLayout>

        <TextView
            android:id="@+id/room_control_drapes_slidertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SLIDER"
            style="@style/RoomControl_txt_title"
            />
        &lt;!&ndash;slider&ndash;&gt;
        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/room_control_drapes_sliderseek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:max="10"
            android:nextFocusLeft="@+id/room_control_drapes_sliderseek"
            android:nextFocusRight="@+id/room_control_drapes_sliderseek"
            android:nextFocusUp="@+id/room_control_drapes_blackoutsseek"
            android:progressDrawable="@drawable/room_control_progess_selector"
            android:thumb="@drawable/room_control_thumb_selector"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

          <TextView
              android:id="@+id/room_control_drapes_sliderstatus"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="close"
              style="@style/RoomControl_txt_content"
              />

          <TextView
              android:id="@+id/room_control_drapes_sliderstatus_on"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:gravity="end"
              android:text="open"
              style="@style/RoomControl_txt_content"
              />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>-->
</RelativeLayout>
